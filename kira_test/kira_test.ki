// kira-test: A functional testing framework for Kira
//
// This is the main module that re-exports all public items from sub-modules.
//
// Modules:
//   - types.ki      : Core type definitions (ADTs)
//   - assertions.ki : Assertion functions for testing
//   - tagging.ki    : Test tagging and filtering
//   - builders.ki   : Test, suite, and config builders
//   - runners.ki    : Test execution functions
//   - reporters.ki  : Result reporting (effect functions)

module kira_test

// =============================================================================
// Re-export Types
// =============================================================================

import kira_test.types.{
    AssertionResult,
    Passed,
    Failed,
    TestResult,
    TimedTestResult,
    TestCase,
    TestSuite,
    RunConfig,
    TestSummary,
    TimedTestSummary
}

// =============================================================================
// Re-export Assertions
// =============================================================================

import kira_test.assertions.{
    // Boolean
    assert_true,
    assert_false,
    // Equality - i32
    assert_eq_i32,
    assert_not_eq_i32,
    // Equality - string
    assert_eq_str,
    assert_not_eq_str,
    // Equality - bool
    assert_eq_bool,
    // Equality - f64
    assert_eq_f64,
    assert_approx_eq,
    // Comparison - i32
    assert_greater_i32,
    assert_less_i32,
    // Range
    assert_in_range_i32,
    assert_in_range_f64,
    // Option - i32
    assert_some_i32,
    assert_none_i32,
    assert_some_eq_i32,
    // Option - string
    assert_some_str,
    assert_none_str,
    assert_some_eq_str,
    // Result - i32
    assert_ok_i32,
    assert_err_i32,
    assert_ok_eq_i32,
    assert_err_contains_i32,
    // Result - string
    assert_err_str,
    assert_err_contains_str,
    // String content
    assert_contains,
    assert_starts_with,
    assert_ends_with,
    // List - i32
    assert_empty_i32,
    assert_not_empty_i32,
    assert_length_i32
}

// =============================================================================
// Re-export Tagging
// =============================================================================

import kira_test.tagging.{
    has_tag,
    has_any_tag,
    filter_by_tags
}

// =============================================================================
// Re-export Builders
// =============================================================================

import kira_test.builders.{
    // Test case builders
    test,
    test_tagged,
    // Suite builders
    suite,
    suite_with_setup,
    suite_with_lifecycle,
    suite_with_each,
    suite_full,
    // Config builders
    default_config,
    config_fail_fast,
    config_with_tags,
    config_full
}

// =============================================================================
// Re-export Runners
// =============================================================================

import kira_test.runners.{
    // Standard runners
    run_test,
    run_test_with_hooks,
    run_suite,
    run_suite_with_config,
    run_all_suites,
    run_all_suites_with_config,
    // Timed runners
    run_test_timed,
    run_test_timed_with_hooks,
    run_suite_timed,
    run_all_suites_timed,
    // Parallel runners
    run_suite_parallel,
    run_all_suites_parallel,
    run_suite_parallel_timed
}

// =============================================================================
// Re-export Reporters
// =============================================================================

import kira_test.reporters.{
    // Standard reporting
    print_failure,
    print_summary,
    run_and_report,
    run_and_report_with_config,
    // Timed reporting
    print_failure_timed,
    print_summary_timed,
    run_and_report_timed,
    // Parallel reporting
    run_and_report_parallel,
    run_and_report_parallel_timed
}
