// Debug test - simple cross-module function call

module examples.debug_test

import kira_test.types.{AssertionResult, Passed, Failed, TestCase, TestSuite, TestSummary}
import kira_test.builders.{test, suite}
import kira_test.runners.{run_suite}

fn add(a: i32, b: i32) -> i32 {
    return a + b
}

effect fn main() -> void {
    print("=== Debug Test ===")
    print("")

    let t1: TestCase = test("simple add", fn() -> AssertionResult {
        let result: i32 = add(2, 3)
        match result == 5 {
            true => { return Passed }
            false => { return Failed("Expected 5") }
        }
    })

    let tests: List[TestCase] = std.list.singleton(t1)
    let s: TestSuite = suite("Debug Suite", tests)

    let summary: TestSummary = run_suite(s)

    match summary.failed == 0 {
        true => { print("All tests passed!") }
        false => { print("Some tests failed.") }
    }
    return
}
